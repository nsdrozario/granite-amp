CXX := clang++
LDFLAGS := -lsfml-graphics -lsfml-window -lsfml-system -lopengl32 
CXXFLAGS := -std=c++17 -Iinclude/ -Iexternal_headers/ -O3
SRCS := $(wildcard src/*.cpp)
OBJS := $(patsubst src/%.cpp, obj/%.o, $(SRCS))

amp: $(OBJS)
	$(CXX) $(OBJS) $(CXXFLAGS) $(LDFLAGS) -o amp 

obj/%.o: src/%.cpp
	$(CXX) $< $(CXXFLAGS) -c -o $@

clean:
	rm -rf *.exe
	rm -rf amp
	rm -rf obj/
	mkdir obj
